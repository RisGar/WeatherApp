<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/bg_gradient">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:text="Bergstedt, Hamburg"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/currentTemp"
        app:srcCompat="@drawable/cloud" />


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/currentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="7.2°C"
        android:textSize="100dp" />

    <TextView
        android:layout_below="@+id/currentTemp"
        android:layout_centerHorizontal="true"
        android:id="@+id/currentSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Cloudy"
        android:textColor="@android:color/white"
        android:textSize="50dp" />

    <TextView
        android:layout_below="@+id/currentSummary"
        android:layout_centerHorizontal="true"
        android:id="@+id/tomorrowTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Tomorrow: 3.2°C"
        android:textSize="25dp" />


</RelativeLayout>